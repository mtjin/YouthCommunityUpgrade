<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context=".activity.activities.ChatRoomActivity">

    <android.support.v7.widget.RecyclerView
        android:background="@color/chatTextBacground"
        android:id="@+id/chat_rev_messages"
        android:layout_width="match_parent"
        android:clipToPadding="false"
        android:layout_height="0dp"
        android:layout_weight="11" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <Button
            android:id="@+id/chat_btn_addphoto"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ic_chat_add_photo" />

        <EditText
            android:id="@+id/chat_pt_write"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/message_input"
            android:maxLength="1000"
            android:maxLines="100"
            android:padding="5dp" />

        <Button
            android:id="@+id/chat_btn_send"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ic_send" />
    </LinearLayout>
</LinearLayout>